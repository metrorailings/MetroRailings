<div id='installationSummary'>

	<div class='dataGrouping {{#if_cond status 'closed'}} disabled {{/if_cond}}'>
		<span class='specializedLabel'>
            <i class='fa fa-tag fa-rotate-180'></i>
		    Platform Type
		</span>
		<select id='orderPlatformType' {{#if_cond status 'closed'}} disabled {{/if_cond}}>
			<option value='earth' {{#if_cond installation.platformType 'earth'}} selected {{/if_cond}}>Earth</option>
			<option value='cement' {{#if_cond installation.platformType 'cement'}} selected {{/if_cond}}>Cement</option>
			<option value='tile' {{#if_cond installation.platformType 'tile'}} selected {{/if_cond}}>Tile</option>
			<option value='wood' {{#if_cond installation.platformType 'wood'}} selected {{/if_cond}}>Wood</option>
			<option value='limestone' {{#if_cond installation.platformType 'limestone'}} selected {{/if_cond}}>Limestone</option>
		</select>
	</div>

	<div class='dataGrouping {{#if_cond status 'closed'}} disabled {{/if_cond}}'>
		<span class='specializedLabel'>
			<i class='fa fa-tag fa-rotate-180'></i>
			Cover Plates?
		</span>
		<span id='coverPlatesButtonSet' class='buttonSet'>
			<input type='radio' class='yesRadio' id='coverPlatesYes' name='coverPlates' value='y'
				{{#if_cond status 'closed'}}disabled{{/if_cond}}
				{{#if installation.coverPlates}}checked{{/if}} />
			<label for='coverPlatesYes'>Yes</label>
			<input type='radio' class='noRadio' id='coverPlatesNo' name='coverPlates' value=''
				{{#if_cond status 'closed'}}disabled{{/if_cond}}
				{{#unless installation.coverPlates}}checked{{/unless}} />
			<label for='coverPlatesNo'>No</label>
		</span>
	</div>
</div>