			<option value='PCKT-5/8' {{#if_cond design.picket 'PCKT-5/8'}} selected {{/if_cond}}>5/8"</option>
			<option value='PCKT-3/4' {{#if_cond design.picket 'PCKT-3/4'}} selected {{/if_cond}}>3/4"</option>
			<option value='PCKT-1' {{#if_cond design.picket 'PCKT-1'}} selected {{/if_cond}}>1"</option>
		</select>
	</div>

	<div class='dataGrouping {{#if_cond status 'closed'}} disabled {{/if_cond}}'>
		<span class='specializedLabel'>
            <i class='fa fa-tag fa-rotate-180'></i>
		    Post End Design
		</span>
		<select id='orderPostEnd' {{#if_cond status 'closed'}}disabled{{/if_cond}}>
			<option value='' {{#if_cond design.postEnd '' }} selected {{/if_cond}}>None</option>
			<option value='PE-VOL' {{#if_cond design.postEnd 'PE-VOL' }} selected {{/if_cond}}>Volute</option>
			<option value='PE-LT' {{#if_cond design.postEnd 'PE-LT' }} selected {{/if_cond}}>Lamb's Tongue</option>
			<option value='PE-SCRL' {{#if_cond design.postEnd 'PE-SCRL' }} selected {{/if_cond}}>Scroll</option>
			<option value='OTHER' {{#is_custom_design design.postEnd}} selected {{/is_custom_design}}>- Other -</option>
		</select>

		<input id='otherPostEnd' type='text' class='otherTextfield {{#is_custom_design design.postEnd}} reveal {{/is_custom_design}}'
