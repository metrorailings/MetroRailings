			<option value='H-COL' {{#if_cond design.handrailing 'H-COL'}} selected {{/if_cond}}>Colonial Handrailing</option>
			<option value='H-STD' {{#if_cond design.handrailing 'H-STD'}} selected {{/if_cond}}>Standard Handrailing</option>
			<option value='OTHER' {{#is_custom_design design.handrailing}} selected {{/is_custom_design}}>- Other -</option>
		</select>

		<input id='otherHandrailing' type='text' class='otherTextfield {{#is_custom_design design.handrailing}} reveal {{/is_custom_design}}'
