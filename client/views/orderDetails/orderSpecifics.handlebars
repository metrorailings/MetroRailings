<div id='orderSpecifics'>

	<div class='dataGrouping {{#if_cond status 'closed'}} disabled {{/if_cond}}'>
		<span class='specializedLabel'>
            <i class='fa fa-tag fa-rotate-180'></i>
		    Post Design
		</span>
		<select id='orderPost' {{#if_cond status 'closed'}}disabled{{/if_cond}}>
			<option value='P-BPC' {{#if_cond design.post 'P-BPC'}} selected {{/if_cond}}>Colonial Big Post</option>
			<option value='P-SP' {{#if_cond design.post 'P-SP'}} selected {{/if_cond}}>Standard Small Post</option>
			<option value='OTHER' {{#is_custom_design design.post}} selected {{/is_custom_design}}>- Other -</option>
		</select>

		<input id='otherPost' type='text' class='otherTextfield {{#is_custom_design design.post}} reveal {{/is_custom_design}}'
			   {{#if_cond status 'closed'}}disabled{{/if_cond}}
			   value='{{#is_custom_design design.post}}{{ design.post }}{{/is_custom_design}}'/>
	</div>

	<div class='dataGrouping {{#if_cond status 'closed'}} disabled {{/if_cond}}'>
