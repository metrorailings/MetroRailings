	<div class='dataGrouping {{#if_cond status 'closed'}} disabled {{/if_cond}}'>
		<span class='specializedLabel'>
            <i class='fa fa-tag fa-rotate-180'></i>
		    Color
		</span>
		<select id='orderColor' {{#if_cond status 'closed'}}disabled{{/if_cond}}>
			<option value='white' {{#if_cond design.color 'white' }} selected {{/if_cond}}>Sky White</option>
			<option value='black' {{#if_cond design.color 'black' }} selected {{/if_cond}}>Midnight Black</option>
