<div id='orderFilter'>

	<div id='generalFilter'>
		<span class='filterHeader'>Filter</span>
		<span class='generalFilter' data-value=''>All</span>
		<span class='generalFilter' data-value='open'>Open</span>
		<span class='generalFilter' data-value='dueDate'>Sort by Due Date</span>
	</div>

    <div id='stateFilter'>
        <span class='filterHeader'>Status</span>
		<span class='statusFilter' data-value=''>All</span>
        <span class='statusFilter' data-value='prospect'>Prospect</span>
        <span class='statusFilter' data-value='pending'>Pending Confirmation</span>
		<span class='statusFilter' data-value='material'>Material</span>
		<span class='statusFilter' data-value='layout'>Production</span>
		<span class='statusFilter' data-value='install'>Install</span>
		<span class='statusFilter' data-value='closing'>Closing</span>
		<span class='statusFilter' data-value='closed'>Closed</span>
        <span class='statusFilter' data-value='cancelled'>Cancelled</span>
    </div>

	<div id='companyFilter'>
		<span class='filterHeader'>Search by Company Name</span>
		<select id='companySelector'>
			<option value=''>Select a company here...</option>
			{{#each companies}}
				<option value='{{ this }}'>{{ this }}</option>
			{{/each}}
		</select>
		<i id='resetCompany' class='fa fa-times-circle'></i>
	</div>

    <div id='searchFilter'>
        <span class='filterHeader'>Search</span>
        <span class='inputTextIcon'>
            <input id='searchFilterTextfield' type='text' placeholder="Search by any keyword....">
            <i id='resetSearch' class='fa fa-times-circle'></i>
        </span>
    </div>
</div>