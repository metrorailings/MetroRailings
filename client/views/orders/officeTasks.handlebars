<div id='tasksList'>

	{{#if upwaveCards.estimates.length}}

		<div class='taskSlickContainer'>

			<fieldset class='taskGrid'>
				<legend class='translate'>Estimates</legend>

				{{#each upwaveCards.estimates}}
					<div class='taskInfo'>
						<span class='taskDescription'>
							<span class='taskTitle'>{{title}}</span>
							{{#if description }}
								<span class='taskDetails translate'>{{{description}}}</span>
							{{/if}}

							{{#if subtasks}}
								<ul>
									{{#each subtasks}}
										<li class='translate {{#finished_dt}} completedSubTask{{/finished_dt}}'>{{description}}</li>
									{{/each}}
								</ul>
							{{/if}}
						</span>

						<span class='taskOwner'>
							{{#if assigned.length}}
								{{#each assigned}}
									<div>- {{firstname}} -</div>
								{{/each}}
							{{else}}
								<span class='translate'>- Unassigned -</span>
							{{/if}}
						</span>

						<span class='taskActions'>
							<i class='fa fa-edit' data-board-id='{{ board.id }}' data-card-id='{{ id }}'></i>
						</span>
					</div>
				{{/each}}

			</fieldset>

		</div>

	{{/if}}

