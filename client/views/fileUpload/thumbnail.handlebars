<div class='thumbnailContainer'>
	<img src='{{ thumbnail }}' alt='File Thumbnail...' class='uploadedImageThumbnail'
		 data-full-src='{{ shareLink }}' data-name='{{ name }}' data-is-image='{{#if isImage}}true{{/if}}' 
		 data-shortname='{{ shortname }}' />
	{{#if showDeleteIcon}}
		<i class='fa fa-times-circle deleteImage'></i>
	{{/if}}
	{{#unless isImage}}
		<span class='thumbnailTitleBar'>{{ shortname }}</span>
	{{/unless}}
</div>