<div id='locationSummary'>

	<div class='dataGrouping'>
		<span class='specializedLabel'>
		    Address
		</span>
		<input type='text' id='address' value='{{ order.customer.address }}' />
	</div>

	<div class='dataGrouping'>
		<span class='specializedLabel'>
		    Apt. Number / Suite
		</span>
		<input type='text' id='aptSuiteNo' class='optionalField' value='{{ order.customer.aptSuiteNo }}' />
	</div>

	<div class='dataGrouping'>
		<span class='specializedLabel'>
		    City
		</span>
		<input type='text' id='city' value='{{ order.customer.city }}' />
	</div>

	<div class='dataGrouping'>
		<span class='specializedLabel'>
		    State
		</span>
		<select id='state'>
			<option value='' disabled>Select a state...</option>
			<option value='NJ' {{#if_cond order.customer.state 'NJ'}} selected {{/if_cond}}>New Jersey</option>
			<option value='NY' {{#if_cond order.customer.state 'NY'}} selected {{/if_cond}}>New York</option>
			<option value='PA' {{#if_cond order.customer.state 'PA'}} selected {{/if_cond}}>Pennsylvania</option>
		</select>
	</div>

	<div class='dataGrouping'>
		<span class='specializedLabel'>
		    Zip Code
		</span>
		<input type='text' id='zipCode' maxlength="5" class='optionalField' value='{{ order.customer.zipCode }}' />
		<span class='hint hint--right hint--always' data-hint=''></span>
	</div>

</div>