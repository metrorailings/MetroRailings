{{#unless_cond order.status 'pending' }}

	<div id='paymentsSection'>

		<div class='dataGrouping'>
			<div class='specializedLabel'>Payments</div>
			<div id='paymentsContainer'>
				<div id='newPaymentForm'>
					<div id='paymentOptionHeaders'>
						<span class='paymentOptionHeader selected'>Credit Card</span>
						<span class='paymentOptionHeader'>Check</span>
						<span class='paymentOptionHeader'>Cash</span>
					</div>

					<div id='newPaymentCreditCard'>
						<div id='ccPaymentDetails'>
							<span>
								<label>Payment Amount</label>
								$<input id='newPaymentCCAmount' type='tel' />
							</span>
							<span>
								<label>Card</label>
								<span id='ccList'>
									{{#if order.payments.ccTokens}}
										{{#each order.payments.ccTokens}}
											<div class='ccListEntry'>
												<input id='{{ this.id }}' type='radio' name='existingCC' value='{{this.card.id}}' />
												<label for='{{ this.id }}'>
													<i class='fa {{#determine_cc_icon this.card.brand}}{{/determine_cc_icon}}'></i>&nbsp;(...{{ this.card.last4 }})
												</label>
											</div>
										{{/each}}
										<div class='ccListEntry'>
											<input id='newCardOption' type='radio' name='existingCC' value='new' />
											<label for='newCardOption' class='smallLabel'>New Card</label>
										</div>
									{{/if}}
								</span>
							</span>
						</div>
						<div>
							<div id='newPaymentCCForm' class='disabled'>
								<div class='controlGroupingRow'>
									<label>Credit Card Number</label>
									<input id='newCCNumber' type='tel' disabled />
								</div>
								<div class='controlGroupingRow'>
									<span>
										<label>Expiration Date</label>
										<select id='ccExpDateMonth' disabled>
											<option value='' selected='selected' disabled>Month</option>
											<option value='1'>January</option>
											<option value='2'>February</option>
											<option value='3'>March</option>
											<option value='4'>April</option>
											<option value='5'>May</option>
											<option value='6'>June</option>
											<option value='7'>July</option>
											<option value='8'>August</option>
											<option value='9'>September</option>
											<option value='10'>October</option>
											<option value='11'>November</option>
											<option value='12'>December</option>
										</select>
										<select id='ccExpDateYear' disabled>
											<option value='' selected='selected' disabled>Year</option>
											{{#each expirationYears }}
												<option value='{{this}}'>{{this}}</option>
											{{/each}}
										</select>
									</span>

									<span>
										<label>Security Code (CVC)</label>
										<input type='tel' id='newCVCNumber' maxlength='4' disabled />
									</span>
								</div>
							</div>
							<div>
								<button id='ccSaveButton'>Submit Payment</button>
							</div>
						</div>
					</div>

					<div id='newPaymentCheck' class='hide'></div>

					<div id='newPaymentCash' class='hide'></div>

				</div>

			</div>
		</div>

	</div>

{{/unless_cond}}